{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VINY",
  "version": "0.6.0",
  "identifier": "com.viny.app",
  "build": {
    "beforeDevCommand": "pnpm vite dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VINY - Notes",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Modern note-taking app",
    "longDescription": "VINY is a modern, fast, and secure note-taking application with markdown support.",
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": "Developer ID Application: Tomas Maritano (CB8LJYCJ3T)",
      "hardenedRuntime": true
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/tomymaritano/viny-markdown/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ4NDQwMTI0MzgxMUMzRjgKUldUNHd4RTRKQUZFMkRIYlg0c054YjVGWmYxeHdua0w2eXk1cGtCM3pGNGd0SkU1MFBQaTdlb2kK"
    }
  }
}
